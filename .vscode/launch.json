{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django: Remote Attach",
            "type": "python",
            "request": "attach",
            "port": 6000,
            "host": "127.0.0.1",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/project",
                    "remoteRoot": "/app"
                }
            ]
        },
        {
            "name": "Celery: Remote Attach",
            "type": "python",
            "request": "attach",
            "port": 6001,
            "host": "127.0.0.1",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/project",
                    "remoteRoot": "/app"
                }
            ]
        }
    ]
}